{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "*.js",
          "*.html",
          "css/**",
          "js/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/index.js"
    },
    {
      "src": "/code",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/qr",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}